config:
    cloud-init.user-data: |
        #cloud-config
        timezone: America/New_York
        users:
            - default
            - name: RUNIT
            - lock_passwd: true
            - sudo: ALL=(ALL) NOPASSWD:ALL
        keyboard:
            layout: us
        late-commands:
            - curtin in-target --target=/target -- sed -i 's/GRUB_CMDLINE_LINUX_DEFAULT=""/GRUB_CMDLINE_LINUX_DEFAULT="cgroup_enable=cpuset cgroup_memory=1 cgroup_enable=memory systemd.unified_cgroup_hierarchy=0"/' /etc/default/grub
            - curtin in-target --target=/target -- update-grub

NOTE: you must also have a meta-data.YAML file in the same directory as this file. They must both be under the /cdrom/preseed directory in the cubic manager
